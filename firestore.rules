
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isDoctor() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }
    
    // Allow doctors to write to a patient's subcollections if they have consent (simplified for now)
    function hasAccessToPatient(patientId) {
        return isOwner(patientId) || isDoctor(); // In a real app, this would check a consent record
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Prescriptions subcollection
      match /prescriptions/{prescriptionId} {
        allow read, write: if hasAccessToPatient(userId);
      }
      
      // CarePlans subcollection
      match /carePlans/{carePlanId} {
        allow read, write: if hasAccessToPatient(userId);

        // Tasks subcollection within a CarePlan
        match /tasks/{taskId} {
            allow read, write: if hasAccessToPatient(userId);

            // TaskLogs subcollection within a Task
            match /taskLogs/{taskLogId} {
                allow read, write: if hasAccessToPatient(userId);
            }
        }
      }
      
      // Consents subcollection
      match /consents/{consentId} {
          allow read, write: if isOwner(userId);
      }
    }

    match /patients/{patientId} {
      allow read, write: if request.auth != null; // Should be restricted further based on roles/consent
    }

    match /practitioners/{practitionerId} {
        allow read, write: if request.auth != null; // Should be restricted further based on roles/consent
    }

    match /facilities/{facilityId} {
        allow read, write: if request.auth != null; // Should be restricted further
    }
    
    match /auditLogs/{auditLogId} {
        // Only allow backend services (or admins) to write audit logs.
        allow read: if request.auth != null; // Or more restrictive
        allow write: if false; // Should be handled by backend functions
    }
    
     match /{path=**}/taskLogs/{taskLogId} {
        allow list: if request.auth.uid != null;
    }

    match /common_meds/{medId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /common_tests/{testId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /chats/{chatId} {
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      allow read, write: if isParticipant();
      allow create: if request.auth != null; // Allow any authenticated user to create a chat
      
      match /messages/{messageId} {
        function isChatParticipant() {
          return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        }
        allow read, write: if isChatParticipant();
        allow create: if isChatParticipant();
      }
    }
  }
}
