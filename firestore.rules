
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isDoctor() {
      // Assumes user's role is stored in a 'users' collection
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow doctors to write to a patient's subcollections if they have consent
    function hasAccessToPatient(patientId) {
        // A doctor can access if they are a participant in a chat with the patient.
        // This is a proxy for consent for this version of the app.
        let hasChatAccess = exists(
            /databases/$(database)/documents/chats/{chatId}
        ) where get(/databases/$(database)/documents/chats/{chatId}).data.participants[0] == patientId
             && get(/databases/$(database)/documents/chats/{chatId}).data.participants[1] == request.auth.uid
             || get(/databases/$(database)/documents/chats/{chatId}).data.participants[1] == patientId
             && get(/databases/$(database)/documents/chats/{chatId}).data.participants[0] == request.auth.uid;
             
        return isOwner(patientId) || (isDoctor() && hasChatAccess);
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      
      match /prescriptions/{prescriptionId} {
        allow read, write: if hasAccessToPatient(userId);

        match /documents/{documentId} {
          allow read, write: if hasAccessToPatient(userId);
        }
      }
      
      match /carePlans/{carePlanId} {
        allow read, write: if hasAccessToPatient(userId);

        match /tasks/{taskId} {
            allow read, write: if hasAccessToPatient(userId);

            match /taskLogs/{taskLogId} {
                allow read, write: if hasAccessToPatient(userId);
            }
        }
      }
      
      match /consents/{consentId} {
          allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /patients/{patientId} {
      allow read, write: if request.auth != null; // Should be restricted further
    }

    match /practitioners/{practitionerId} {
        allow read, write: if request.auth != null; // Should be restricted further
    }

    match /facilities/{facilityId} {
        allow read, write: if request.auth != null; // For now, allow any authenticated user. Should be admin only.
    }
    
    match /auditLogs/{auditLogId} {
        allow read: if isAdmin();
        allow write: if false; // Should be handled by backend functions
    }
    
    // This allows collection group queries on taskLogs for the owner
    match /{path=**}/taskLogs/{taskLogId} {
      allow list: if resource.data.patientId == request.auth.uid;
    }
    
    match /{path=**}/tasks/{taskId} {
        allow list: if resource.data.patientId == request.auth.uid;
    }

    match /common_meds/{medId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /common_tests/{testId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /chats/{chatId} {
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      allow read, update: if isParticipant();
      allow create: if request.auth != null; // Allow any authenticated user to create a chat
      
      match /messages/{messageId} {
        function isChatParticipant() {
          let chatDoc = get(/databases/$(database)/documents/chats/$(chatId));
          return request.auth.uid in chatDoc.data.participants;
        }
        allow read, create: if isChatParticipant();
        allow update, delete: if isChatParticipant() && request.auth.uid == resource.data.senderId;
      }
    }
  }
}
