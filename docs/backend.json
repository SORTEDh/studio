{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the patient support system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "passwordHash": {
          "type": "string",
          "description": "Hashed password of the user."
        },
        "role": {
          "type": "string",
          "description": "Role of the user.",
          "enum": [
            "patient",
            "doctor",
            "admin"
          ]
        },
        "locale": {
          "type": "string",
          "description": "Preferred locale of the user.",
          "format": "string"
        }
      },
      "required": [
        "id",
        "email",
        "passwordHash",
        "role",
        "locale"
      ]
    },
    "Patient": {
      "title": "Patient",
      "description": "Represents a patient's profile.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string", "description": "FK to User" }
      },
      "required": ["id", "userId"]
    },
    "Practitioner": {
      "title": "Practitioner",
      "description": "Represents a practitioner's profile.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string", "description": "FK to User" }
      },
      "required": ["id", "userId"]
    },
    "Facility": {
      "title": "Facility",
      "description": "Represents a medical facility.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Consent": {
        "title": "Consent",
        "description": "Represents a consent record granted by a patient.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "patientId": { "type": "string" },
            "counterpartyId": { "type": "string" },
            "scope": { "type": "string" },
            "grantedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "patientId", "counterpartyId", "scope", "grantedAt"]
    },
    "AuditLog": {
        "title": "AuditLog",
        "description": "Represents an audit log for important events.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "userId": { "type": "string" },
            "action": { "type": "string" },
            "details": { "type": "object" }
        },
        "required": ["id", "timestamp", "userId", "action"]
    },
    "Prescription": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Prescription",
      "type": "object",
      "description": "Represents a prescription record.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the prescription entity."
        },
        "patientId": {
          "type": "string",
          "description": "Reference to the User (Patient). (Relationship: User 1:N Prescription)"
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the prescription image.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the prescription was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "patientId",
        "imageUrl",
        "createdAt"
      ]
    },
    "CarePlan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CarePlan",
      "type": "object",
      "description": "Represents a care plan for a patient.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the care plan entity."
        },
        "patientId": {
          "type": "string",
          "description": "Reference to the User (Patient). (Relationship: User 1:N CarePlan)"
        },
        "prescriptionId": {
          "type": "string",
          "description": "Reference to the Prescription. (Relationship: Prescription 1:N CarePlan)"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the care plan was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "patientId",
        "prescriptionId",
        "createdAt"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task within a care plan.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the task entity."
        },
        "carePlanId": {
          "type": "string",
          "description": "Reference to the CarePlan. (Relationship: CarePlan 1:N Task)"
        },
        "type": {
          "type": "string",
          "description": "Type of the task."
        },
        "text_en": {
          "type": "string",
          "description": "Task description in English."
        },
        "text_kn": {
          "type": "string",
          "description": "Task description in Kannada."
        },
        "dueDate": {
          "type": "string",
          "description": "Due date for the task.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Status of the task."
        }
      },
      "required": [
        "id",
        "carePlanId",
        "type",
        "text_en",
        "text_kn",
        "dueDate",
        "status"
      ]
    },
    "TaskLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TaskLog",
      "type": "object",
      "description": "Represents a log of task completions.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the task log entity."
        },
        "taskId": {
          "type": "string",
          "description": "Reference to the Task. (Relationship: Task 1:N TaskLog)"
        },
        "completedAt": {
          "type": "string",
          "description": "Timestamp indicating when the task was completed.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "taskId",
        "completedAt"
      ]
    },
    "Chat": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Chat",
      "type": "object",
      "description": "Represents a chat session between users.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the chat session."
        },
        "participants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of user IDs participating in the chat."
        },
        "lastMessage": {
          "type": "string",
          "description": "The last message sent in the chat."
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of the last message.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "participants",
        "updatedAt"
      ]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a single message in a chat.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the message."
        },
        "chatId": {
          "type": "string",
          "description": "Reference to the Chat."
        },
        "senderId": {
          "type": "string",
          "description": "The ID of the user who sent the message."
        },
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "An array of URLs to attachments."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the message was sent.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "chatId",
        "senderId",
        "text",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" }
        }
      },
      {
        "path": "/patients/{patientId}",
        "definition": {
          "entityName": "Patient",
          "schema": { "$ref": "#/backend/entities/Patient" }
        }
      },
      {
        "path": "/practitioners/{practitionerId}",
        "definition": {
          "entityName": "Practitioner",
          "schema": { "$ref": "#/backend/entities/Practitioner" }
        }
      },
      {
        "path": "/facilities/{facilityId}",
        "definition": {
          "entityName": "Facility",
          "schema": { "$ref": "#/backend/entities/Facility" }
        }
      },
      {
        "path": "/users/{userId}/prescriptions/{prescriptionId}",
        "definition": {
          "entityName": "Prescription",
          "schema": { "$ref": "#/backend/entities/Prescription" }
        }
      },
      {
        "path": "/users/{userId}/carePlans/{carePlanId}",
        "definition": {
          "entityName": "CarePlan",
          "schema": { "$ref": "#/backend/entities/CarePlan" }
        }
      },
      {
        "path": "/users/{userId}/carePlans/{carePlanId}/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": { "$ref": "#/backend/entities/Task" }
        }
      },
       {
        "path": "/users/{userId}/consents/{consentId}",
        "definition": {
          "entityName": "Consent",
          "schema": { "$ref": "#/backend/entities/Consent" }
        }
      },
      {
        "path": "/auditLogs/{auditLogId}",
        "definition": {
          "entityName": "AuditLog",
          "schema": { "$ref": "#/backend/entities/AuditLog" }
        }
      },
      {
        "path": "/chats/{chatId}",
        "definition": {
          "entityName": "Chat",
          "schema": { "$ref": "#/backend/entities/Chat" }
        }
      },
      {
        "path": "/chats/{chatId}/messages/{messageId}",
        "definition": {
          "entityName": "Message",
          "schema": { "$ref": "#/backend/entities/Message" }
        }
      }
    ]
  }
}
